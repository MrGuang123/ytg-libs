{
  "verbose": true,
  "testEnvironment": "node",
  "collectCoverage": true,
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "coverageReporters": [
    "lcov",
    "json"
  ],
  "collectCoverageFrom": [
    "**/lib/**"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}